{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File ${extensionPath}/scripts/play-sound.ps1 -Event SessionStart"
          }
        ]
      }
    ],
    "AfterAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File ${extensionPath}/scripts/play-sound.ps1 -Event AfterAgent"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File ${extensionPath}/scripts/play-sound.ps1 -Event Notification"
          }
        ]
      }
    ]
  }
}
